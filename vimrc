syntax on

call plug#begin()

Plug 'moll/vim-node'
Plug 'junegunn/goyo.vim'
Plug 'maxmellon/vim-jsx-pretty'
Plug 'pangloss/vim-javascript'
Plug 'tpope/vim-surround'
Plug 'tomlion/vim-solidity'
Plug 'elixir-editors/vim-elixir'

call plug#end()

set nocompatible
set shortmess+=I
set number
set relativenumber
set laststatus=2
set backspace=indent,eol,start
set hidden
set ignorecase
set smartcase
set incsearch
set noerrorbells visualbell t_vb=
set mouse+=a
set tabstop=2
set shiftwidth=2
set expandtab
set colorcolumn=80
set incsearch


